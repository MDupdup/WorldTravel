<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="125dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/search_country_flag"
            android:layout_width="90dp"
            android:layout_height="40dp"

            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="285dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/search_country_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="France"
            android:textSize="22sp"
            android:textColor="#000"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_country_capital_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capitale : Paris"
            android:textSize="16sp"

            android:paddingBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/search_country_continent" />

        <TextView
            android:id="@+id/search_country_continent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:text="Continent : Europe"

            android:paddingBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>



</LinearLayout>