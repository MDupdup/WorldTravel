<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ynov.malo.worldtravel.CalendarActivity">

    <DatePicker
        android:id="@+id/calendar_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></DatePicker>


    <Button
        android:id="@+id/button_add_country"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Valider"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:background="@color/colorValidate"
        android:onClick="validateAll"

        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
